package javaprograms;

public class forloop {

	void meth1()
	{
		System.out.println("code is starting...");
		for(int i=1;i<=5;i++)
		{
			System.out.println("i value= "+i);
		}
		System.out.println("code finished");
	}
	void meth2()
	{
		System.out.println("code is staring...");
		for(int i=1;i<=3;i++)
		{
			for(int j=3;j>=0;j--)
		    {
				System.out.println("i: "+ i + "-----"+ "j: "+j);
			}
			System.out.println("---------------------");
		}
	}
	void meth3()
	{
		System.out.println("code is staring...");
