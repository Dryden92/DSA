			System.out.println("i value : "+ i);
			i++;
		
	}
	void meth4()
	{
		System.out.println("code is staring...");
		for(int i=1;i<=10;i++)
		{
			System.out.println("i value: "+ ++i + ++i);
		}
	}
	void meth5()
	{
		System.out.println("code is staring...");
		for(int i=1;i<=5;i++)
		{
			char c='A';
			for(int j=1;j<=i;j++)
			{
				System.out.println(c+" ");
				c++;
			}
			System.out.println();
		}
	}
